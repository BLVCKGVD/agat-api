{% extends 'base.html.twig' %}

{% block title %}Для сотрудика{% endblock %}

{% block body %}
    <div class="row">
        <h2 class="text-center">Авторизованы как {{ FIO }}</h2>
        <h5 class="text-center text-secondary">Ваша роль: {{ role|trans }}</h5>
        <center>
            <div class="col-lg-5 p-5 m-3 col-sm-8 align-self-center border border-primary border-2 rounded-3">
                <a href="/aircrafts" class="btn btn-primary w-100 m-2">Список ВС</a>
                {% if role == 'admin' %}
                    <a href="/content" class="btn btn-primary w-100 m-2">Страницы</a>
                {% endif %}
                <a href="/exit" class="btn btn-danger w-50 mt-3">Выход</a>
            </div>
        </center>

    </div>
{% endblock %}

