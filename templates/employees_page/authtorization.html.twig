<div class="row mt-5">
    <h2 class="text-center mb-4">Авторизация:</h2>
    <center>
        <div class="col-sm-6 col-md-3">
            {{ form_start(form) }}
    
            {{form_widget(form.login,  { 'attr': { 'class': 'form-control mb-4' }} )}}

            {{form_widget(form.password,  { 'attr': { 'class': 'form-control mb-4' }} )}}

            
            {{form_widget(form.submit,  { 'attr': { 'class': 'form-control mb-4' }} )}}

            
            {{ form_end(form) }}
            {{ form_errors(form) }} 
            {{error}}
        </div>
    </center>
</div>
